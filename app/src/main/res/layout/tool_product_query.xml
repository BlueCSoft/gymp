<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <TextView
            style="@style/Label16Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="货号条码" />
        <EditText
            android:id="@+id/id_tool_product_query_inp"
            style="@style/Text18Style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/size_40dp"
            android:background="@drawable/border_radius"
            android:gravity="start|center"
            android:paddingLeft="@dimen/size_8dp"
            android:selectAllOnFocus="true"
            android:text=""
            android:imeOptions="actionDone"
            />

        <ImageView
            android:id="@+id/id_tool_product_query_cr"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/login_content"
            android:padding="@dimen/size_4dp"
            android:layout_gravity="center"
            android:src="@drawable/new_gou1"/>
        <ImageView
            android:id="@+id/id_tool_product_query_scan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/login_content"
            android:padding="@dimen/size_4dp"
            android:layout_gravity="center"
            android:src="@drawable/new_scan2"/>


    </LinearLayout>

</LinearLayout>