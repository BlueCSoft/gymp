<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/Text20Style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="营业员登录" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_40dp"
        android:layout_marginRight="@dimen/size_40dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            style="@style/Label18Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="选择营业员" />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/color_gray"
            android:background="@drawable/input_radius"
            android:tag="saleslist"
            android:minHeight="100dp"
            android:dividerHeight="1px">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="@dimen/size_40dp"
        android:layout_marginRight="@dimen/size_40dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <EditText
            android:id="@+id/id_login_password_et"
            style="@style/Text18Style"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@null"
            android:gravity="start|center"
            android:inputType="numberPassword"
            android:paddingLeft="@dimen/size_8dp"
            android:drawableLeft="@drawable/setting_password"
            android:drawablePadding="8dp"
            android:selectAllOnFocus="true"
            android:hint="请输入营业员密码"
            android:tag="pwd"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/size_2dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/div_line3">
            </View>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/dialog_bottom"/>
</LinearLayout>