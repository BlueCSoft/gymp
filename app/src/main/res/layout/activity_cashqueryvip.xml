<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_graybg"
    android:orientation="vertical"
    tools:context="com.synics.gymp.cash.CashqueryvipActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_headpanel"
        android:background="@color/color_titlebg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="会员信息"
            android:textColor="@color/color_white"
            android:textSize="@dimen/fontsize_headpanel" />

        <ImageView
            style="@style/ReturnButtonStyle" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <LinearLayout
            android:id="@+id/id_setting_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:divider="@drawable/divider_line"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_settingpanel"
                android:layout_marginLeft="@dimen/size_24dp"
                android:layout_marginRight="@dimen/size_24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/Label16Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡号" />

                <TextView
                    style="@style/Text16Style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:tag="vipid"
                    android:text="2010000001" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_settingpanel"
                android:layout_marginLeft="@dimen/size_24dp"
                android:layout_marginRight="@dimen/size_24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/Label16Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡类型" />

                <TextView
                    style="@style/Text16Style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:tag="viptype"
                    android:text="钻石卡" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_settingpanel"
                android:layout_marginLeft="@dimen/size_24dp"
                android:layout_marginRight="@dimen/size_24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/Label16Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持卡人" />

                <TextView
                    style="@style/Text16Style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:tag="vipname"
                    android:text="王**" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_settingpanel"
                android:layout_marginLeft="@dimen/size_24dp"
                android:layout_marginRight="@dimen/size_24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/Label16Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年度积分" />

                <TextView
                    style="@style/Text16Style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:tag="ypoints"
                    android:text="10000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_settingpanel"
                android:layout_marginLeft="@dimen/size_24dp"
                android:layout_marginRight="@dimen/size_24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/Label16Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可用积分" />

                <TextView
                    style="@style/Text16Style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:tag="apoints"
                    android:text="8888" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_settingpanel"
                android:layout_marginLeft="@dimen/size_24dp"
                android:layout_marginRight="@dimen/size_24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/Label16Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期" />

                <TextView
                    style="@style/Text16Style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:tag="yxrq"
                    android:text="2019-11-01" />

                <TextView
                    style="@style/Text16Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:tag="isyx"
                    android:textColor="@color/color_green"
                    android:text="(有效)" />
                <TextView
                    style="@style/Text16Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:tag="iswx"
                    android:visibility="gone"
                    android:textColor="@color/color_red"
                    android:text="(无效)" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
