<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_winbg"
    android:orientation="vertical"
    tools:context="com.synics.gymp.activity.QueryActivity">

    <RelativeLayout
        android:id="@+id/id_common_query_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_headpanel"
        android:background="@color/color_titlebg">

        <TextView
            android:id="@+id/id_common_query_title"
            style="@style/WindowTitle"
            android:text="报表查询"/>

        <ImageView
            style="@style/ReturnButtonStyle"
            android:tag="returnbutton"/>

        <ImageView
            style="@style/QueryButtonStyle"
            android:tag="querybutton"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/id_common_query_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_common_query_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ListView
            android:id="@+id/id_common_query_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_rect"
            android:dividerHeight="1px"
            >

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_common_query_none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/id_tool_pay_query_cr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/login_content"
            android:padding="@dimen/size_4dp"
            android:layout_gravity="center"
            android:src="@drawable/none"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_common_query_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_graybg"
        android:gravity="left"
        >

        <TextView
            style="@style/Label14Style"
            android:id="@+id/id_common_query_total_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="@dimen/size_6dp"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_common_query_bottompanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_graybg"
        >
    </LinearLayout>
</LinearLayout>