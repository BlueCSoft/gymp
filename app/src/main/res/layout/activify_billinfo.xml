<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cashmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/id_common_query_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_headpanel"
        android:background="@color/color_titlebg">

        <TextView
            style="@style/WindowTitle"
            android:text="订单详情" />

        <ImageView
            style="@style/ReturnButtonStyle"
            android:tag="returnbutton" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingTop="4dp">

                <TextView
                    style="@style/Label14Style"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_8dp"
                    android:text="订单号" />

                <TextView
                    style="@style/Text14Style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="billid"
                    android:text="201010010000001" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/color_white"
                android:gravity="center_vertical">

                <TextView
                    style="@style/Label14Style"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_8dp"
                    android:text="时    间" />

                <TextView
                    style="@style/Text14Style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="billdate"
                    android:text="2019-07-10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/color_white"
                android:gravity="center_vertical">

                <TextView
                    style="@style/Label14Style"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_8dp"
                    android:text="专柜号" />

                <TextView
                    style="@style/Text14Style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="counterid"
                    android:text="010001" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/color_white"
                android:gravity="center_vertical">

                <TextView
                    style="@style/Label14Style"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_8dp"
                    android:text="收银员" />

                <TextView
                    style="@style/Text14Style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="cashier"
                    android:text="小芳" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/color_white"
                android:gravity="center_vertical">

                <TextView
                    style="@style/Label14Style"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_8dp"
                    android:text="营业员" />

                <TextView
                    style="@style/Text14Style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="sales"
                    android:text="小芳" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/color_white"
                android:gravity="center_vertical">

                <TextView
                    style="@style/Label14Style"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_8dp"
                    android:text="会    员:" />

                <TextView
                    style="@style/Text14Style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="vipinfo"
                    android:text="2010000001" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/color_white"
                android:gravity="center_vertical">

                <TextView
                    style="@style/Label14Style"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_8dp"
                    android:text="顾    客:" />

                <TextView
                    style="@style/Text14Style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="customerinfo"
                    android:text="2010000001" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingBottom="4dp">

                <TextView
                    style="@style/Label14Style"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_8dp"
                    android:text="状  态:" />

                <TextView
                    style="@style/Text14Style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="billstate"
                    android:text="2010000001" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/color_titlebg"
                android:gravity="center_vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@color/color_white"
                android:gravity="center_vertical">

                <TextView
                    style="@style/Label14Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_8dp"
                    android:text="商品明细"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:tag="goodslist"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/color_titlebg"
                android:gravity="center_vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:paddingTop="@dimen/size_6dp">

                        <TextView
                            style="@style/Label14Style"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="数量" />

                        <TextView
                            style="@style/Text14Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:tag="quantity"
                            android:text="10" />

                        <TextView
                            style="@style/Label14Style"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:text="原价合计" />

                        <TextView
                            style="@style/Text14Style"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:tag="totalamount"
                            android:text="10000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white">

                        <TextView
                            style="@style/Label14Style"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:tag=""
                            android:text="会员折扣" />

                        <TextView
                            style="@style/Text14Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:tag="vipdiscount"
                            android:text="10" />

                        <TextView
                            style="@style/Label14Style"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:text="单品折扣" />

                        <TextView
                            style="@style/Text14Style"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:tag="counterdiscount"
                            android:text="10000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white">

                        <TextView
                            style="@style/Label14Style"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="促销折扣" />

                        <TextView
                            style="@style/Text14Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:tag="popzk"
                            android:text="0" />

                        <TextView
                            style="@style/Label14Style"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:text="整单折扣" />

                        <TextView
                            style="@style/Text14Style"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:tag="rulezk"
                            android:text="10000" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white">

                        <TextView
                            style="@style/Label14Style"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="总价折扣" />

                        <TextView
                            style="@style/Text14Style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:tag="totaldiscount"
                            android:text="0" />

                        <TextView
                            style="@style/Label14Style"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:text="折扣合计" />

                        <TextView
                            style="@style/Text14Style"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:tag="sumdiscount"
                            android:text="10000" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_white"
                        android:paddingBottom="6dp">

                        <TextView
                            style="@style/Label16Style"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="应收金额" />

                        <TextView
                            style="@style/Text16StyleRed"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:tag="amount"
                            android:text="10000" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/color_titlebg"
                android:gravity="center_vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@color/color_white"
                android:gravity="center_vertical">

                <TextView
                    style="@style/Label14Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/size_8dp"
                    android:text="支付明细"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:tag="payslist"
                android:orientation="vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"></LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
