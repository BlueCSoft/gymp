<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <TextView
            style="@style/Label16Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号卡号" />
        <EditText
            android:id="@+id/id_tool_pay_query_inp"
            style="@style/Text18Style"
            android:layout_width="128dp"
            android:layout_height="@dimen/size_40dp"
            android:background="@drawable/border_radius"
            android:gravity="start|center"
            android:inputType="number"
            android:paddingLeft="@dimen/size_8dp"
            android:selectAllOnFocus="true"
            android:text="0001386"
            android:imeOptions="actionDone"
            />

        <ImageView
            android:id="@+id/id_tool_pay_query_cr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/login_content"
            android:padding="@dimen/size_4dp"
            android:layout_gravity="center"
            android:src="@drawable/card_sweep_icon"/>
        <ImageView
            android:id="@+id/id_tool_pay_query_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/login_content"
            android:padding="@dimen/size_4dp"
            android:layout_gravity="center"
            android:src="@drawable/scan_icon"/>
        <Spinner
            style="@style/Text16Style"
            android:id="@+id/id_tool_pay_query_zffs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:background="@drawable/shape_spinner_drop_down"
            android:entries="@array/zffs"
            android:spinnerMode="dropdown"/>

    </LinearLayout>

</LinearLayout>