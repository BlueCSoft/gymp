<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/id_billdayreport_recno"
            style="@style/Label16Style"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1" />

        <TextView
            android:id="@+id/id_payquery_billid"
            style="@style/Text16Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="201010010000001"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_billdayreport_pname"
            style="@style/Text16Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2dp">

        <TextView
            style="@style/Label16Style"
            android:layout_width="32dp"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/Label16Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式:" />

        <TextView
            android:id="@+id/id_payquery_zffs"
            style="@style/Text16Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="2251" />

        <TextView
            style="@style/Label16Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额:"

            />

        <TextView
            android:id="@+id/id_payquery_zfje"
            style="@style/Text16Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="复古" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2dp"
        android:layout_marginBottom="@dimen/size_6dp">

        <TextView
            style="@style/Label16Style"
            android:layout_width="32dp"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/Label16Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付时间:" />

        <TextView
            android:id="@+id/id_payquery_zfsj"
            style="@style/Text16Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/color_border" />
</LinearLayout>