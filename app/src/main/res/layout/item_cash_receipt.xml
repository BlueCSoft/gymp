<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="@dimen/size_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <TextView
            style="@style/Label14Style"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="wrap_content"
            android:text="代码" />

        <TextView
            android:id="@+id/id_cash_goodlist_xsm"
            style="@style/Text14Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="2251" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="@dimen/size_2dp">

        <TextView
            style="@style/Label14Style"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="wrap_content"
            android:text="品名" />

        <TextView
            android:id="@+id/id_cash_goodlist_pm"
            style="@style/Text14Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="2251" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="@dimen/size_2dp">

        <TextView
            style="@style/Label14Style"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="wrap_content"
            android:text="件数" />

        <TextView
            android:id="@+id/id_cash_goodlist_sl"
            style="@style/Text14Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="2251" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="@dimen/size_2dp">

        <TextView
            style="@style/Label14Style"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="wrap_content"
            android:text="原价" />

        <TextView
            android:id="@+id/id_cash_goodlist_ysj"
            style="@style/Text14Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="2251" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="@dimen/size_2dp">

        <TextView
            style="@style/Label14Style"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="wrap_content"
            android:text="折扣" />
        <TextView
            android:id="@+id/id_cash_goodlist_zk"
            style="@style/Text14Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="2251" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="@dimen/size_2dp">

        <TextView
            style="@style/Label14Style"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="wrap_content"
            android:text="售价" />

        <TextView
            android:id="@+id/id_cash_goodlist_sj"
            style="@style/Text14Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="2251" />
    </LinearLayout>
</LinearLayout>