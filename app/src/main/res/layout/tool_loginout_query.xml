<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_graybg"
        android:padding="4dp">

        <TextView
            style="@style/Label16Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="收银员" />

        <Spinner
            android:id="@+id/id_tool_loginout_query_syy"
            style="@style/Text16Style"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/shape_spinner_drop_down"
            android:entries="@array/zffs"
            android:gravity="left"
            android:spinnerMode="dropdown" />

        <TextView
            style="@style/Label16Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="日期" />

        <TextView
            android:id="@+id/id_tool_loginout_query_rq"
            style="@style/Text16Style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_radius"
            android:drawableRight="@drawable/drop_down"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/size_8dp"
            android:text="" />

    </LinearLayout>

</LinearLayout>