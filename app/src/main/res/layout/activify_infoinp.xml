<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cashmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/id_common_query_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_headpanel"
        android:background="@color/color_titlebg">

        <TextView
            style="@style/WindowTitle"
            android:text="商品信息补录" />

        <ImageView
            style="@style/ReturnButtonStyle"
            android:tag="returnbutton" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingTop="4dp">

        <TextView
            style="@style/Label14Style"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_8dp"
            android:text="订单号" />

        <TextView
            style="@style/Text14Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="billid"
            android:text="201010010000001" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingBottom="4dp">

        <TextView
            style="@style/Label14Style"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_8dp"
            android:text="时    间" />

        <TextView
            style="@style/Text14Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="billdate"
            android:text="2019-07-10" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_titlebg"
        android:gravity="center_vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/color_white"
        android:gravity="center_vertical">

        <TextView
            style="@style/Label14Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_8dp"
            android:text="商品明细"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:divider="@color/color_white"
            android:tag="goodslist"></ListView>
    </LinearLayout>
</LinearLayout>

